<div class="row">
    <div class="col-sm-12">
        <div class="card card-small mb-4">
            <div class="card-header border-bottom text-center">
                <button type="button" class="mb-2 btn btn-sm btn-pill btn-outline-info mr-2">
                    <i class="material-icons mr-1">person_add</i>
                    Dodaj zdjÄ™cie
                </button>
                <button type="button" class="mb-2 btn btn-sm btn-pill btn-outline-info mr-2">
                    <i class="material-icons mr-1">person_add</i>
                    Dodaj logo
                </button>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item p-3">
                    <div class="row">
                        <div class="col">
                            {{ form_start(form, {'attr': {'data-edit-team': path('app.team.edit', {'team': form.vars.data.id ?? 0}) }}) }}
                                <div class="form-row">

                                    <div class="form-group col-md-12">
                                        {{ form_label(form.name) }}
                                        {{ form_widget(form.name) }}
                                        {{ form_errors(form.name) }}
                                    </div>
                                    <div class="form-group col-md-12">
                                        {{ form_label(form.description) }}
                                        {{ form_widget(form.description) }}
                                    </div>
                                </div>
                            {{ form_rest(form) }}
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</div>
{% block javascripts %}
    {{ encore_entry_script_tags('datetimepicker') }}
{% endblock %}
