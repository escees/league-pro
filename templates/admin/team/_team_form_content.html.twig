<div class="col-sm-12">
{{ form_start(form, {'attr': {'data-edit-team': path('app.team.edit', {'team': form.vars.data.id ?? 0}) }}) }}
<div class="card-header border-bottom text-center">
    <div class="form-group d-flex flex-column align-items-center team-photo">
        {{ form_label(form.photoFile) }}
        {{ form_widget(form.photoFile) }}
        {{ form_errors(form.photoFile) }}
    </div>
    <hr>
    <div class="form-group d-flex flex-column align-items-center team-crest">
        {{ form_label(form.crestFile) }}
        {{ form_widget(form.crestFile) }}
        {{ form_errors(form.crestFile) }}
    </div>
</div>
<ul class="list-group list-group-flush">
    <li class="list-group-item p-3">
        <div class="row">
            <div class="col">
                <div class="form-row">
                    <div class="form-group col-md-12">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name) }}
                        {{ form_errors(form.name) }}
                    </div>
                    <div class="form-group col-md-12">
                        {{ form_label(form.description) }}
                        {{ form_widget(form.description) }}
                    </div>
                </div>

            </div>
        </div>
    </li>
</ul>
<br>
<a class="btn btn-sm btn-outline-secondary" href="{{ path('app.admin.team.list') }}">
    <i class="material-icons">save</i> Wróć
</a>
<button class="btn btn-sm btn-info" type="submit">
    <i class="material-icons">file_copy</i> Zapisz
</button>
</div>
{{ form_rest(form) }}
{% block javascripts %}
    {{ encore_entry_script_tags('team') }}
{% endblock %}
