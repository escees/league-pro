<div class="row">
    <div class="col mt-5">
        <div class="card card-small mb-4">
            <div class="card-header border-bottom text-center">
                <h6 class="m-0">Tabela</h6>
            </div>
            <div class="card-body p-0 pb-3 text-center">
                <table class="table table-hover  mb-0">
                    <thead class="bg-warning">
                        <tr>
                            <th scope="col" class="border-0">#</th>
                            <th scope="col" class="border-0">Dru≈ºyna</th>
                            <th scope="col" class="border-0">M</th>
                            <th scope="col" class="border-0">Z</th>
                            <th scope="col" class="border-0">ZPK</th>
                            <th scope="col" class="border-0">PPK</th>
                            <th scope="col" class="border-0">P</th>
                            <th scope="col" class="border-0">BZ</th>
                            <th scope="col" class="border-0">BS</th>
                            <th scope="col" class="border-0">RB</th>
                            <th scope="col" class="border-0">PKT</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for team in teams %}
                            <tr>
                                <td>{{ loop.index }}</td>
                                <td>{{ team.name }}</td>
                                <td>{{ team.played }}</td>
                                <td>{{ team.wins }}</td>
                                <td>{{ team.winsAfterPenalties }}</td>
                                <td>{{ team.losesAfterPenalties }}</td>
                                <td>{{ team.loses }}</td>
                                <td>{{ team.goalsScored }}</td>
                                <td>{{ team.goalsConceded }}</td>
                                <td>{{ team.goals_diff }}</td>
                                <td>{{ team.points }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
