<div class="col-lg-6 col-md-12 col-sm-12 mb-4 mt-4">
    <div class="card card-small ">
        <div class="card-header text-center">
            <h3>Ligi</h3>
            <a class="btn btn-outline-info" href="{{ path('app.admin.league.add') }}">Dodaj ligę</a>
        </div>
        <div class="card-body pt-0" id="team-list">
            {% for league in leagues %}
                <ul class="list-group team-{{ league.id }}" data-team-id="{{ league.id }}">
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col">
                                {{ league.name }}
                            </div>
                            <div class="btn-group col col-md col-lg-3">
                                <a class="btn btn-info btn-sm news-item"
                                   href="{{ path('app.admin.league.edit', {'league': league.id}) }}"
                                   data-toggle="tooltip"
                                   data-placement="left"
                                   title="Edytuj"
                                >
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a class="btn btn-danger btn-sm league-item"
                                   href="{{ path('app.admin.league.delete', {'league': league.id}) }}"
                                   data-toggle="tooltip"
                                   data-placement="right"
                                   title="Usuń"
                                >
                                    <i class="fas fa-trash"></i>
                                </a>
                                <a class="btn btn-warning btn-sm"
                                   href="{{ path('app.admin.league.finish', {'league': league.id}) }}"
                                   data-toggle="tooltip"
                                   data-placement="right"
                                   title="Zakończ ligę"
                                >
                                    <i class="fa fa-ban" aria-hidden="true"></i>
                                </a>

                            </div>
                        </div>
                    </li>
                </ul>
            {% else %}
                Jeszcze nie utworzyłeś żadnej ligi.
            {% endfor %}
        </div>
    </div>
</div>

