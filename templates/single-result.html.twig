{% extends 'base.html.twig' %}
{% block body %}
    <div class="section-title single-result" style="background:url({{ asset('build/img/locations/3.jpg') }})">
        <div class="container">
            <div class="row">
                <!-- Result Location -->
                <div class="col-lg-12">
                    <div class="result-location">
                        <ul>
                            <li>
                                {{ match.startDate|date('d/m/Y H:i') }}
                            </li>
                            <li>
                                <i class="fa fa-map-marker" aria-hidden="true"></i>
                                TZN Arena
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- End Result Location -->

            <!-- Result -->
            <div class="row">
                <div class="col-md-5 col-lg-5">
                    <div class="team">
                        <img src="img/clubs-logos/colombia.png" alt="club-logo">
                        <a href="{{ path('app.team.view', {'team': match.homeTeam.id}) }}">{{ match.homeTeam.name }}</a>
                        <ul>
                            {% for goal in match.matchDetails.goals %}
                                {% if goal.scorer in match.homeTeam.players %}
                                    <li>{{ goal.scorer.name }} {{ goal.minute }}' <i class="fa fa-futbol-o" aria-hidden="true"></i></li>
                                {% endif %}
                            {% endfor %}
                        </ul>
                    </div>
                </div>

                <div class="col-md-2 col-lg-2">
                    <div class="result-match">
                        {{ match.matchDetails.homeTeamGoals }} : {{ match.matchDetails.awayTeamGoals }}
                    </div>
                </div>

                <div class="col-md-5 col-lg-5">
                    <div class="team right">
                        <a href="{{ path('app.team.view', {'team': match.awayTeam.id}) }}">{{ match.awayTeam.name }}</a>
                        <img src="img/clubs-logos/arg.png" alt="club-logo">
                        <ul>
                            {% for goal in match.matchDetails.goals|sort %}
                                {% if goal.scorer in match.awayTeam.players %}
                                    <li><i class="fa fa-futbol-o" aria-hidden="true"></i> {{ goal.scorer.name }} {{ goal.minute }}' </li>
                                {% endif %}
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
            <!-- End Result -->

