{% extends 'base.html.twig' %}
{% block body %}
    <div class="hero-header">
        <div id="hero-slider" class="hero-slider">
            {% for news in newsForSlider %}
                <div class="item-slider" style="background:url({{ asset('build/img/slide/' ~ random(1,3) ~ '.jpg')}});">
                    <div class="container">
                        <div class="row align-items-center">
                            <div class="col-lg-7">
                                <div class="info-slider">
                                    <h1>{{ news.title }}</h1>
                                    <a href="{{ path('app.admin.news.view', {'news': news.id}) }}" class="btn-iw outline">Czytaj więcej <i class="fa fa-long-arrow-right"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
