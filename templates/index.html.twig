                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="statistics">
                                <div class="row">
                                   <div class="col-lg-4">
                                       <div class="club-ranking">
                                            <h5><a href="{{ path('app.table') }}">Tabela</a></h5>
                                            <div class="info-ranking">
                                                <ul>
                                                    {% for team in teams %}
                                                        <li>
                                                            <span class="position">
                                                                {{ loop.index }}
                                                            </span>
                                                            <a href="{{ path('app.team.view', {'team': team.id}) }}">
                                                                <img src="{{ asset('build/img/clubs-logos/pol.png') }}" alt="">
                                                                {{ team.name }}
                                                            </a>
                                                            <span class="points">
                                                                {{ team.points }} pkt
                                                            </span>
                                                        </li>
                                                    {% endfor %}

                                                </ul>
                                            </div>
                                       </div>
                                    </div>
                                    <div class="col-lg-4">
                                       <div class="recent-results">
                                            <h5><a href="{{ path('app.results') }}">Ostatnie wyniki</a></h5>
                                            <div class="info-results">
                                                <ul>
                                                    {% for result in results %}
                                                        <li>
                                                            <span class="head">
                                                                <small>{{ result.homeTeam.name }} vs. {{ result.awayTeam.name }}  <span class="date">{{ result.startDate|date('d/m/Y H:i') }}</span></small>
                                                            </span>

                                                            <div class="goals-result">
                                                                <a href="{{ path('app.team.view', {'team': result.homeTeam.id}) }}">
                                                                    <img src="img/clubs-logos/por.png" alt="">
                                                                    {{ result.homeTeam.name }}
                                                                </a>

                                                                <span class="goals">
                                                                    <a href="{{ path('app.single_result', {'match': result.id}) }}">
                                                                        <b>{{ result.matchDetails.homeTeamGoals }}</b> - <b>{{ result.matchDetails.awayTeamGoals }}</b>
                                                                    </a>
                                                                </span>

                                                                <a href="{{ path('app.team.view', {'team': result.awayTeam.id}) }}">
                                                                    <img src="img/clubs-logos/esp.png" alt="">
                                                                    {{ result.awayTeam.name }}
                                                                </a>
                                                            </div>
                                                        </li>
                                                    {% endfor %}
                                                </ul>
                                            </div>
                                       </div>
                                    </div>
                                    <div class="col-lg-4">
                                       <div class="player-ranking">
                                            <h5><a href="#">Najlepsi strzelcy</a></h5>
                                            <div class="info-player">
                                                <ul>
                                                    {% for scorer in bestScorers %}
                                                        <li>
                                                            <span class="position">
                                                              {{ loop.index }}
                                                            </span>
                                                            <a href="#">
                                                                <img src="img/players/1.jpg" alt="">
                                                                {{ scorer.name }}
                                                            </a>
                                                            <span class="points">
                                                                {{ scorer.goals }}
                                                            </span>
                                                        </li>
                                                    {% endfor %}
                                                </ul>
                                            </div>
                                       </div>
                                    </div>
                                </div>
                            </div>
