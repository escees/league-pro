{% extends 'base.html.twig' %}
{% block body %}
    <section class="content-info mb-5">
        <div class="container paddings-mini">
            <div class="row">
                <div class="col-lg-12">
                    <table class="table-striped table-hover result-point">
                        <thead class="point-table-head teal-color-background">
                        <tr>
                            <th class="text-left">#</th>
                            <th class="text-left">Dru≈ºyna</th>
                            <th class="text-center">M</th>
                            <th class="text-center">Z</th>
                            <th class="text-center">R</th>
                            <th class="text-center">P</th>
                            <th class="text-center">GZ</th>
                            <th class="text-center">GS</th>
                            <th class="text-center">+/-</th>
                            <th class="text-center">PKT</th>
                        </tr>
                        </thead>

                        <tbody class="text-center">
                            {% for team in teams %}
                                {% set team = team.team %}
                                <tr>
                                    <td>{{ loop.index }}</td>
                                    <td><img src="{{ team.crest.name ? asset('images/team/crest/' ~ team.crest.name) : asset('build/img/clubs-logos/pol.png') }}"> {{ team.name }}</td>
                                    <td>{{ team.playedMatches }}</td>
                                    <td>{{ team.matchesWon|length }}</td>
                                    <td>{{ team.matchesTied|length }}</td>
                                    <td>{{ team.matchesLost|length }}</td>
                                    <td>{{ team.goalsScored }}</td>
                                    <td>{{ team.goalsConceded }}</td>
                                    <td>{{ team.goalsDiff }}</td>
                                    <td><strong>{{ team.points }}</strong></td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
