{% extends 'base.html.twig' %}
{% block body %}
    <section class="content-info">
        <div class="container paddings-mini">
            <div class="row">
                <div class="col-lg-12">
                    <table class="table-striped table-hover result-point">
                        <thead class="point-table-head">
                        <tr>
                            <th class="text-left">#</th>
                            <th class="text-left">Dru≈ºyna</th>
                            <th class="text-center">M</th>
                            <th class="text-center">Z</th>
                            <th class="text-center">ZPK</th>
                            <th class="text-center">PPK</th>
                            <th class="text-center">P</th>
                            <th class="text-center">GZ</th>
                            <th class="text-center">GS</th>
                            <th class="text-center">+/-</th>
                            <th class="text-center">PKT</th>
                        </tr>
                        </thead>

                        <tbody class="text-center">
                            {% for team in teams %}
                                <tr>
                                    <td>{{ loop.index }}</td>
                                    <td><img src="img/clubs-logos/colombia.png" alt="Colombia"> {{ team.name }}</td>
                                    <td>{{ team.played }}</td>
                                    <td>{{ team.wins }}</td>
                                    <td>{{ team.winsAfterPenalties }}</td>
                                    <td>{{ team.losesAfterPenalties }}</td>
                                    <td>{{ team.loses }}</td>
                                    <td>{{ team.goalsScored }}</td>
                                    <td>{{ team.goalsConceded }}</td>
                                    <td>{{ team.goals_diff }}</td>
                                    <td>{{ team.points }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
