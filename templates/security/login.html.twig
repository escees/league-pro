{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ encore_entry_link_tags('semantic_styles') }}
    {{ encore_entry_link_tags('login') }}
{% endblock %}
{% block body %}
    <div class="ui middle aligned center aligned grid">
        <div class="column">
            <h2 class="ui teal image header">
                <div class="content">
                    Zaloguj siÄ™ na swoje konto
                </div>
            </h2>
            <form class="ui large form" method="post" _lpchecked="1">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <div class="ui stacked segment">
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="user icon"></i>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="lock icon"></i>
                            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>
                        </div>
                    </div>
                    <div class="ui fluid large teal submit button">Zaloguj</div>
                </div>
                <div class="ui error message"></div>
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
            </form>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {{ encore_entry_script_tags('login') }}
    {{ encore_entry_script_tags('semantic_javascripts') }}
{% endblock %}

